<form method="POST">
    <div>
        {{ form_widget(form.category) }}
        {{ form_errors(form.category) }}
    </div>
    <div>
        {{ form_widget(form.user,{'attr': {'placeholder': 'auteur'}}) }}
        {{ form_errors(form.user) }}
    </div>
    <div>
        {{ form_widget(form.name,{'attr': {'placeholder': 'name'}}) }}
        {{ form_errors(form.name) }}
    </div>
    <div>
        {{ form_widget(form.description,{'attr': {'placeholder': 'description'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div>
        {{ form_widget(form.availableAt,{'attr': {'placeholder': 'date de sortie'}}) }}
        {{ form_errors(form.availableAt) }}
    </div>

    <div>
        {{ form_widget(form.price,{'attr': {'placeholder': 'prix'}}) }}
        {{ form_errors(form.price) }}
    </div>

    {{ form_rest(form) }}
    <input type="submit"/>
</form>