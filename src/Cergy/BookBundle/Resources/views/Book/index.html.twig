{% extends '::base.html.twig' %}

{% block content %}
    <ul>
        <li><a href="{{ path('cergy_book_book_create')}}">Créer un livre</a></li>
        <li><a href="{{ path('cergy_book_category_create')}}">Créer une category</a></li>
    </ul>
    {% if app.session.flashBag.has('success') %}
        {% for message in  app.session.flashBag.get('success') %}
            {{ message }}
        {% endfor %}
    {% endif %}
    {% for book in books %}
        <h1>{{book.name }}</h1>
        {{ book.description }}
        {{ book.availableAt|date("m/d/Y") }}
        {{ book.price }} €
        {{ book.user.username }}
        {{ book.category.name }}
        <a href="{{ path('cergy_book_book_edit', {'id': book.id}) }}">Editer</a>
        <a href="{{ path('cergy_book_book_delete', {'id': book.id}) }}">Supprimer</a>
    {% endfor %}
{% endblock %}
